# Task Manager Local Development Configuration
# This file overrides default settings for local development
# Copy this file and uncomment/modify values as needed

# Database overrides for local development
# TASK_MANAGER_DB_HOST=localhost
# TASK_MANAGER_DB_PORT=5432
# TASK_MANAGER_DB_NAME=bitinglip_tasks_dev
# TASK_MANAGER_DB_USER=dev_user
# TASK_MANAGER_DB_PASSWORD=dev_password

# Task execution settings
# MAX_CONCURRENT_TASKS=5
# TASK_TIMEOUT_SECONDS=3600
# TASK_RETRY_ATTEMPTS=3

# Queue settings
# TASK_QUEUE_SIZE=1000
# PRIORITY_QUEUE_ENABLED=true

# Local development cache
# CACHE_DIR=./cache/tasks
# CACHE_TTL_SECONDS=300

# Logging overrides
# LOG_LEVEL=DEBUG
# LOG_FILE_PATH=./logs/task-manager-dev.log

# Service discovery overrides
# MODEL_MANAGER_URL=http://localhost:8001
# CLUSTER_MANAGER_URL=http://localhost:8002
# GATEWAY_MANAGER_URL=http://localhost:8000

# Development features
# ENABLE_TASK_DEBUGGING=true
# ENABLE_PERFORMANCE_MONITORING=true
# MOCK_EXTERNAL_SERVICES=false
