# Task Manager Database Configuration
# Dedicated PostgreSQL database for task orchestration and execution history

# Database connection settings
TASK_DB_HOST=localhost
TASK_DB_PORT=5432
TASK_DB_NAME=bitinglip_tasks
TASK_DB_USER=task_manager
TASK_DB_PASSWORD=task_manager_2025!

# Connection pool settings
TASK_DB_POOL_SIZE=20
TASK_DB_MAX_OVERFLOW=50
TASK_DB_POOL_TIMEOUT=30

# Task management settings
TASK_HISTORY_RETENTION_DAYS=90
TASK_METRICS_AGGREGATION_INTERVAL=300
TASK_STATUS_POLLING_INTERVAL=5

# Performance settings
TASK_DB_BATCH_SIZE=1000
TASK_DB_BULK_INSERT_TIMEOUT=30
TASK_DB_INDEX_MAINTENANCE=true

# Logging and monitoring
TASK_DB_LOG_LEVEL=INFO
TASK_DB_SLOW_QUERY_THRESHOLD=2.0
TASK_DB_CONNECTION_LOGGING=false

# Backup and maintenance
TASK_DB_AUTO_BACKUP=true
TASK_DB_BACKUP_INTERVAL_HOURS=4
TASK_DB_VACUUM_SCHEDULE="0 3 * * *"
